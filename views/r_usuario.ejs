<%- include('includes/head.ejs') %>
<%- include('includes/topbar.ejs') %>
<%- include('includes/sidebar.ejs') %>
<body>
  <div class="col py-3">
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <section class="container">
          <h3 class="pt-4 pb-2">Registrar Usuario</h3><br>
          <div class="col-sm-7">
            <form action="/dlc/r_usuario" method="POST">
              <div class="form-group">

                <label for="nombres_empleado">Nombre(s)</label>
                <input type="text" class="form-control" id="nombres_empleado" name="nombres_empleado"  placeholder="Eros Giovanni" autocomplete="off"><br>

                <label for="apellido_paterno">Apellido Paterno</label>
                <input type="text" class="form-control" id="apellido_paterno" name="apellido_paterno" aria-describedby="emailHelp" placeholder="Guillén" autocomplete="off"><br>

                <label for="apellido_materno">Apellido Materno</label>
                <input type="text" class="form-control" id="apellido_materno" name="apellido_materno" aria-describedby="emailHelp" placeholder="Velázquez" autocomplete="off"><br>

                <label for="genero_empleado">Sexo</label>
                  <select name="genero_empleado" class="form-select" aria-label="Default select example">
                    <option value="" disabled selected>Sexo</option>
                    <option value="H">Hombre</option>
                    <option value="M">Mujer</option>
                  </select><br>

                <label for="id_area">Departamento al que pertenece</label>
                <% for (let area1 of area) { %>
                  <a>aaa <% area1.id_area %>aaa</a>
                <% } %>
                  <select name="id_area" class="form-select" aria-label="Default select example">
                    <option value="" disabled selected>Departamento</option>
                      <% for (let area1 of area) { %>
                    <option value="<% area1.id_area %>"> <% area1.nombre_area %></option>
                      <% } %>
                  </select><br>

                <label for="no_empleado">Número de empleado</label>
                <input type="text" class="form-control" id="no_empleado" name="no_empleado" aria-describedby="emailHelp" placeholder="A01705090" autocomplete="off"><br>

                <label for="correo_empresarial">Correo Empresarial</label>
                <input type="email" class="form-control" id="correo_empresarial" name="correo_empresarial" aria-describedby="emailHelp" placeholder="A01703067@natgas.com.mx" autocomplete="off"><br><br>



                <div class="row form-group">
                      <label for="fecha_nacimiento" class="col-sm-5 col-form-label">Fecha de Nacimiento</label>
                      <div class="col-sm-7">
                          <div class="input-group date" id="datepicker">
                              <input type="text" id="fecha_nacimiento" name="fecha_nacimiento" class="form-control" autocomplete="off" placeholder="DD-MM-YYYY">
                              <span class="input-group-append">
                                  <span class="input-group-text bg-white">
                                      <i class="fa fa-calendar"></i>
                                  </span>
                              </span>
                          </div>
                      </div>
                  </div><br>

                  <div class="row form-group">
                        <label for="fecha_contratacion" class="col-sm-5 col-form-label">Fecha de contratación</label>
                        <div class="col-sm-7">
                            <div class="input-group date" id="datepicker">
                                <input type="text" id="fecha_contratacion" name="fecha_contratacion" class="form-control" autocomplete="off" placeholder="DD-MM-YYYY">
                                <span class="input-group-append">
                                    <span class="input-group-text bg-white">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div><br>

                    <!-- PRUEBA SE VA A BORRAR -->
                    <input type="hidden" id="ng_blocks_restantes" name="fecha_solicitud_ng_block" value="5">
                    <input type="hidden" id="dias_vacaciones_restantes" name="estatus_ng_block" value="8">
                    <!-- PRUEBA SE VA A BORRAR -->
              </div>
              <input type="submit" value="Enviar" class="btn btn-primary">
              </form>
              <br>
              <div style="text-align: right;">
                <a href="/dlc/r_usuario">
                  <button id="boton1" class="btn btn-primary" onclick="" style="background-color:#0a0a23"
                    href="/dlc/r_usuario">Cancelar Solicitud</button>
                </a>
              </div>
        </div>
      </div>
    </div>
  </div>
</body>

<%- include('includes/foot.ejs') %>
