<%- include('includes/head.ejs') %>
<%- include('includes/topbar.ejs') %>
<%- include('includes/sidebar.ejs') %>
<body>

<div class="col py-3">
  <div height class="container">
    <h1 class="display-4"><center>Homepage</center></h1>
    <h1 class="display-6">Banner de Noticias</h1>
    <div class="container flex-nowrap">

    <div id="carouselNoticias" class="carousel slide bg-dark" data-ride="carousel">
    <ol class="carousel-indicators">
    <% if (noticia.length > 0) { %>
      <% for (let noticia1 of noticia) { %>
      <li data-target="#carouselNoticias" data-slide-to="<%= noticia1.id_noticia %>" class="active"></li>
      <% } %>
    <% } %>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block mw-100" src="https://i.ibb.co/9yk4DH7/image.png" alt="First slide">
      </div>
      <% if (noticia.length > 0) { %>
        <% for (let noticia2 of noticia) { %>
      <div class="carousel-item">
        <img class="d-block mw-100" src="<%= noticia2.url_imagen_noticia %>" alt="First slide">
      </div>
      <% } %>
    <% } %>
    </div>
    <a class="carousel-control-prev" href="#carouselNoticias" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselNoticias" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
    <div style="text-align: right;"">
      <br>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Agregar Imagen al Banner</button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Imagen al Banner</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">

                <form action="/dlc/main" method="POST">
                  <div class="form-group" style="text-align: left;"">
                    <input type="hidden" id="id_noticia" name="id_noticia" value="1">
                    <label for="url_imagen_noticia" class="col-form-label">URL de la imagen:</label>
                    <input type="text" class="form-control" id="url_imagen_noticia" name="url_imagen_noticia">
                    <br>
                    <input type="submit" value="Enviar" class="btn btn-primary">
                </form>

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>

<!-- -----------------------Pruebas Oscar No borrar------------------------------------------------>
<% if (vacaciones.length > 0) { %>
  <% for (let vacaciones1 of vacaciones) { %>
  <p> ID <%= vacaciones1.folio %> TURNO <%= vacaciones1.no_empleado %> responsable_ausencia <%= vacaciones1.responsable_ausencia %> observaciones <%= vacaciones1.observaciones %> reanudacion_labores <%= vacaciones1.reanudacion_labores %> primer_dia <%= vacaciones1.primer_dia %> ultimo_dia <%= vacaciones1.ultimo_dia %> fecha_solicitud <%= vacaciones1.fecha_solicitud %> dias_solicitados <%= vacaciones1.dias_solicitados %> estatus_vacaciones <%= vacaciones1.estatus_vacaciones %></p><br>
  <% } %>
<% } %>

<!-- -------------------------------Pruebas Oscar No borrar---------------------------------------->
  <br><br>

  <h1 class="display-6">Objetivos Mensuales</h1> <br>
  <div class="card-columns">
    <% if (objetivo.length > 0) { %>
      <% for (let objetivo1 of objetivo) { %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= objetivo1.nombre_objetivo %></h5>
            <p class="card-text"><%= objetivo1.descripcion_objetivo %></p>
          </div>
        </div>
      <% } %>
    <% } %>
</div>
<br>

<h1 class="display-6">Anuncios</h1> <br>
  <% if (publicacion.length > 0) { %>
    <% for (let publicacion1 of publicacion) { %>
      <div class="card mb-3">
        <img class="card-img-top" src="<%= publicacion1.url_imagen_publicacion %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= publicacion1.titulo_publicacion %></h5>
            <p class="card-text"><%= publicacion1.descripcion_publicacion %></p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
    </div>
  <% } %>
<% } %>


</div>



