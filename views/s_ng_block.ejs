<%- include('includes/head.ejs') %>
<%- include('includes/topbar.ejs') %>
<%- include('includes/sidebar.ejs') %>
<div class="col py-3">
  <div class="jumbotron jumbotron-fluid">

    <div class="container">
      <section class="container">
          <h3 class="pt-4 pb-2">Solicitud de NG Block</h3>
          <div style="text-align: right;">
            <br><p>Fecha en la que se realizó la solicitud: <span id='date'></span>.</p>
          </div>
          <br>
          <!--Empieza form -->
          <form action="/dlc/s_ng_block" method="POST">

            <div class="row form-group">
                  <label for="fecha_uso_ng_block" class="col-sm-3 col-form-label">Elige la fecha</label>
                  <div class="col-sm-4">
                      <div class="input-group date" id="datepicker">
                          <input type="text" id="fecha_uso_ng_block" name="fecha_uso_ng_block" class="form-control" autocomplete="off" placeholder="YYYY-MM-DD" required>
                          <span class="input-group-append">
                              <span class="input-group-text bg-white">
                                  <i class="fa fa-calendar"></i>
                              </span>
                          </span>
                      </div>
                  </div>
              </div>

              <div class="row form-group">
                <label for="turno_ng_block" class="col-sm-3 col-form-label">Elige el turno</label>
                <div class="col-sm-4">
                <select name="turno_ng_block" class="form-select" aria-label="Default select example" required>
                  <option value="" disabled selected>Elige turno del día</option>
                  <option value="Matutino">Matutino</option>
                  <option value="Vespertino">Vespertino</option>
                </select>
              </div>
            </div>
            <div class="text">
              <div class="text">
                <label for="descripcion_ng_block" class="col-sm-3 col-form-label"><b>Motivo de uso*</b></label>
              <br>
              </div>
              <textarea id="descripcion_ng_block" name="descripcion_ng_block" rows="6" cols="70" required></textarea>
            </div>
            <br>
            <!-- PRUEBA SE VA A BORRAR -->
            <input type="hidden" id="estatus_ng_block " name="estatus_ng_block" value="Pendiente">
            <input type="hidden" id="no_empleado " name="no_empleado" value="A4">
            <!-- PRUEBA SE VA A BORRAR -->
            <br>
            <input type="submit" value="Enviar" class="btn btn-primary">
          </form>
          <!--Termina form -->
          <br><br>
          <div style="text-align: right;">
            <a href="/dlc/s_ng_block">
              <button id="boton1" class="btn btn-primary" onclick="" style= "background-color:#0a0a23" href="/dlc/s_ng_block">Cancelar Solicitud</button>
            </a>
          </div>
      </section>
    </div>
  </div>
</div>

