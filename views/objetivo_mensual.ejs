<h1 class="display-6">Objetivos Mensuales</h1> <br>
<div class="card-columns">
  <% if (objetivo.length > 0) { %>
    <% for (let objetivo1 of objetivo) { %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= objetivo1.nombre_objetivo %></h5>
          <p class="card-text"><%= objetivo1.descripcion_objetivo %></p>
        </div>
      </div>
    <% } %>
  <% } %>
</div>
<br>



<br>

<!--Agregar anuncio -->

<div style="text-align: right;"">
  <br>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal1" data-whatever="@fat">Agregar Objetivo Mensual</button>
    <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel1">Agregar Anuncio</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <form action="/dlc/main" method="POST">
              <div class="form-group" style="text-align: left;"">
                <input type="hidden" id="id_publicacion" name="id_publicacion" value="274356">
                <label for="titulo_publicacion" class="col-form-label">Título de la publicación:</label>
                <input type="text" class="form-control" id="titulo_publicacion" name="titulo_publicacion">
                <label for="descripcion_publicacion" class="col-form-label">Descripción de la publicación:</label>
                <input type="text" class="form-control" id="descripcion_publicacion" name="descripcion_publicacion">
                <label for="url_imagen_publicacion" class="col-form-label">URL de la publicación:</label>
                <input type="text" class="form-control" id="url_imagen_publicacion" name="url_imagen_publicacion">
                <br>
                <input type="submit" value="Enviar" class="btn btn-primary">
            </form>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
          </div>
        </div>
      </div>
    </div>
</div>
