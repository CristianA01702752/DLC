<%- include('includes/head.ejs') %> <%- include('includes/topbar.ejs') %> <%-
include('includes/sidebar.ejs') %>
<div class="col py-3">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Aprobar vacaciones</h1>

      <br />
      <br />
      <a><b>Solicitudes de Vacaciones</b></a>
      <br />

      <div class="col-sm-4">
        <br />
        <label for="aprobar_vacaciones_estatus">Buscar: </label>
        <input type="text" name="aprobar_vacaciones_estatus" id="aprobar_vacaciones_estatus"/>
        <!--<label  for="aprobar_vacaciones_estatus" class="col-form-label" ><b>Filtrar</b></label>
        <select name="aprobar_vacaciones_estatus" id="aprobar_vacaciones_estatus" class="form-select" aria-label="Default select example">
          <option value="" disabled selected>Filtrar por estatus</option>
          <option value="Pendiente">Pendiente</option>
          <option value="Rechazado">Rechazado</option>
          <option value="Aceptado">Aceptado</option>
        </select>-->
      </div>
      <br />

      <div id="respuesta_ajax">
      <table class="table">
        <thead>
          <tr>
            <th scope="col"><center>Nombre</center></th>
            <th scope="col"><center>Departamento</center></th>
            <th scope="col"><center>Responsable</center></th>
            <th scope="col"><center>Dias solicitados</center></th>
            <th scope="col"><center>Información completa</center></th>
            <th scope="col"><center>Estatus actual</center></th>
            <th scope="col"><center></center></th>
            <th scope="col"><center></center></th>
          </tr>
        </thead>

        <tbody>
          <% if (vacaciones.length > 0) { %> <% for (let vacaciones1 of
          vacaciones) { %>
          <tr>
            <td><center><%=vacaciones1.nombres_empleados%> <%=vacaciones1.apellido_paterno%> <%=vacaciones1.apellido_materno%></center></td>
            <td><center><%=vacaciones1.nombre_area%></center></td>
            <td><center><%= vacaciones1.responsable_ausencia %></center></td>
            <td><center><%= vacaciones1.dias_solicitados %></center></td>
            <td>
              <center>
                <span
                  class="hovertext"
                  data-hover="
              Folio: <%= vacaciones1.folio %>
              No. Empleado: <%= vacaciones1.no_empleado %>
              Responsable: <%= vacaciones1.responsable_ausencia %>
              Fecha Reanudacion: <%= vacaciones1.reanudacion_labores %>
              Fecha primer día: <%= vacaciones1.primer_dia %>
              Fecha ultimo día: <%= vacaciones1.ultimo_dia %>
              Fecha de la solicitud: <%= vacaciones1.fecha_solicitud %>"
                >
                  Vacaciones
                </span>
              </center>
            </td>
            <td><center><%= vacaciones1.estatus_vacaciones %></center></td>
            <td>
              <center>
                <form action="/dlc/a_vacacionesp/<%=current%>" method="POST">
                  <input
                    type="hidden"
                    id="estatus_vacaciones"
                    name="estatus_vacaciones"
                    value="Aprobado"/>
                  <input
                    type="hidden"
                    id="folio"
                    name="folio"
                    value="<%= vacaciones1.folio %>"/>
                  <input
                    type="submit"
                    value="Aprobar"
                    class="btn btn-primary"
                    style="background-color: #86b049"/>
                </form>
              </center>
            </td>
            <td>
              <center>
                <form action="/dlc/a_vacacionesp/<%=current%>" method="POST">
                  <input
                    type="hidden"
                    id="estatus_vacaciones"
                    name="estatus_vacaciones"
                    value="Rechazado"
                  />
                  <input
                    type="hidden"
                    id="folio"
                    name="folio"
                    value="<%= vacaciones1.folio %>"
                  />
                  <input
                    type="submit"
                    value="Rechazar"
                    class="btn btn-primary"
                    style="background-color: #b8293d"
                  />
                </form>
              </center>
            </td>
          </tr>
          <% } %> <% } else { %>
          <h1>No hay solicitudes existentes.</h1>
          <% } %>
        </tbody>
      </table>
      <br>
      <br>

      <% if (pages > 0) { %>
      <nav aria-label="Paginación solicitudes">
        <ul class="pagination justify-content-center">
          <% if (current == 1) { %>
          <li class="page-item disabled">
            <a class="page-link">First</a>
            </li>
          <% } else { %>
          <li class="page-item"><a class ="page-link" href="/dlc/a_vacacionesp/1">First</a></li>
          <% } %> <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1) { %>
          <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
          <% if (i == current) { %>
          <li class="page-item active"><a class="page-link"><%= i %></a></li>
          <% } else { %>
          <li><a class="page-link" href="<%=i%>"><%=i%></a></li>
          <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
          <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %> <% } %> <% if (current == pages) { %>
          <li class="page-item disabled"><a class="page-link">Last</a></li>
          <% } else { %>
          <li><a class="page-link" href="/dlc/a_vacacionesp/<%= pages %>">Last</a></li>
          <% } %>
          <% } %>
          </ul>
      </nav>
      </div
    </div>
  </div>
</div>

<script>
  const accion_asincrona = () => {
      const v_estatus = document.getElementById('aprobar_vacaciones_estatus').value;
      console.log(v_estatus);

      //El token de protección CSRF
      //const csrf = document.getElementById('_csrf').value;

      //función que manda la petición asíncrona
      fetch('/dlc/a_vacacionesp/1/filtrar/'+v_estatus, {
          method: 'GET',
          headers: {
              'Content-Type': 'application/json',
              //'csrf-token': csrf
          }
          //body: JSON.stringify(data)
      }).then(result => {
          return result.json(); //Regresa otra promesa
      }).then(data => {
          //Modificamos el DOM de nuestra página de acuerdo a los datos de la segunda promesa
          console.log(data);
          let respuesta =
          '<table class="table">' +
            '<thead>' +
              '<tr>' +
                '<th scope="col"><center>Nombre</center></th>' +
                '<th scope="col"><center>Departamento</center></th>' +
                '<th scope="col"><center>Responsable</center></th>' +
                '<th scope="col"><center>Dias solicitados</center></th>' +
                '<th scope="col"><center>Información completa</center></th>' +
                '<th scope="col"><center>Estatus actual</center></th>' +
                '<th scope="col"><center>Firma</center></th>' +
              '</tr>' +
            '</thead>' +
            '<tbody>';
          for(let vacaciones of data) {
              respuesta +=
                '<tr>' +
                '<td><center>' + vacaciones.nombres_empleados + ' ' + vacaciones.apellido_paterno + ' ' + vacaciones.apellido_materno + '</center></td>' +
                '<td><center>' + vacaciones.nombre_area + '</center></td>' +
                '<td><center>' + vacaciones.responsable_ausencia + '</center></td>' +
                '<td><center>' + vacaciones.dias_solicitados + '</center></td>' +
                '<td><center>' +
                  '<span class="hovertext" data-hover="' +
                  'Folio: ' + vacaciones.folio +
                  'No. Empleado: ' + vacaciones.no_empleado +
                  'Responsable: ' + vacaciones.responsable_ausencia +
                  'Fecha Reanudacion: ' + vacaciones.reanudacion_labores +
                  'Fecha primer día: ' + vacaciones.fecha_primer_dia +
                  'Fecha ultimo día: ' + vacaciones.fecha_ultimo_dia +
                  'Fecha de la solicitud: ' + vacaciones.fecha_solicitud + ' " > vacaciones' +
                  '</span>' +
                '</center></td>' +
                '<td><center>' + vacaciones.estatus_vacaciones + '</center></td>' +
                '<td><center>' +
                  '<form action="/dlc/a_vacacionesp/' + current + '" method="POST">' +
                    '<input' +
                      'type="hidden"' +
                      'id="estatus_vacaciones"' +
                      'name="estatus_vacaciones"' +
                      'value="Rechazado"' +
                    '/>' +
                    '<input' +
                      'type="hidden"' +
                      'id="folio"' +
                      'name="folio"' +
                      'value="' + vacaciones1.folio '"'+
                    '<input' +
                      'type="submit"' +
                      'value="Rechazar"' +
                      'class="btn btn-primary"' +
                      'style="background-color: #b8293d"' +
                    '/>' +
                  '</form>' +
                '</center></td>';
          }
          respuesta += '</tbody>' +
              '</table>';


          document.getElementById('respuesta_ajax').innerHTML = respuesta;

      }).catch(err => {
          console.log(err);
      });
  };

  document.getElementById('aprobar_vacaciones_estatus').onkeyup  = accion_asincrona;
</script>

<%- include('includes/foot.ejs') %>
