<div id="carouselNoticias" class="carousel slide bg-dark" data-ride="carousel">

<div class="carousel-inner">
  <div class="carousel-item active">
    <img class="d-block mw-100" src="https://i.ibb.co/9yk4DH7/image.png" alt="First slide">
  </div>
  <% if (noticia.length > 0) { %>
    <% for (let noticia1 of noticia) { %>
  <div class="carousel-item">
    <img class="d-block mw-100" src="<%=noticia1.url_imagen_noticia%>" alt="First slide">
  </div>
  <% } %>
<% } %>
</div>
<a class="carousel-control-prev" href="#carouselNoticias" role="button" data-slide="prev">
  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carouselNoticias" role="button" data-slide="next">
  <span class="carousel-control-next-icon" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</a>
</div>
<!--Agregar imagen al banner -->

  <div style="text-align: right;">
    <br>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal0" data-whatever="@mdo">Agregar Imagen al Banner</button>
      <div class="modal fade" id="exampleModal0" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel0" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel0">Agregar Imagen al Banner</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              <form action="/dlc/noticia" method="POST">
                <div class="form-group" style="text-align: left;"">

                  <!--Dato no permanente se va a borrar -->
                  <!--<input type="hidden" id="id_noticia" name="id_noticia" value="5"> -->
                  <!--Dato no permanente se va a borrar -->

                  <label for="url_imagen_noticia" class="col-form-label">URL de la imagen:</label>
                  <input type="text" class="form-control" id="url_imagen_noticia" name="url_imagen_noticia">

                  <input type="submit" value="Enviar" class="btn btn-primary">
                </div>
              </form>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
          </div>
        </div>
      </div>
  </div>
